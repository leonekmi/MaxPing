// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Station {
  rrCode            String  @id
  label             String
  trainsOriginating Train[] @relation("origin")
  trainsArriving    Train[] @relation("destination")
}

model Train {
  id            Int      @id @default(autoincrement())
  freePlaces    Int
  number        String
  equipment     String
  origin        Station  @relation(name: "origin", fields: [originId], references: [rrCode])
  originId      String
  destination   Station  @relation(name: "destination", fields: [destinationId], references: [rrCode])
  destinationId String
  departure     DateTime
  arrival       DateTime
  alerts        Alert[]

  @@unique([number, equipment, departure, arrival, originId, destinationId])
}

model Alert {
  id          Int      @id @default(autoincrement())
  uid         Int
  origin      String
  destination String
  date        DateTime
  trains      Train[]
}

// Session key-value pairs used by grammY
model GrammYSession {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}
